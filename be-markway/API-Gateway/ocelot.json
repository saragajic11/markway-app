{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/customer",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "shipments-api",
          "Port": "5387"
        }
      ],
      "UpstreamPathTemplate": "/customer",
      "UpstreamHttpMethod": ["PUT", "POST", "GET"],
      "HttpHandlerOptions": {
        "UseTracing": true
      }
    },
    {
      "DownstreamPathTemplate": "/api/users",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "users-api",
          "Port": "6387"
        }
      ],
      "UpstreamPathTemplate": "/users",
      "UpstreamHttpMethod": ["GET", "POST", "PUT"],
      "HttpHandlerOptions": {
        "UseTracing": true
      }
    },
    {
      "DownstreamPathTemplate": "/connect/{action}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "identity-api",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/connect/{action}",
      "UpstreamHttpMethod": ["POST", "GET"],
      "HttpHandlerOptions": {
        "UseTracing": true
      }
    },
    {
      "DownstreamPathTemplate": "/api/pdfs",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "pdfs-api",
          "Port": "7387"
        }
      ],
      "UpstreamPathTemplate": "/pdfs",
      "UpstreamHttpMethod": ["POST", "GET"],
      "HttpHandlerOptions": {
        "UseTracing": true
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:9090"
  }
}
